<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expenseapp">

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddExpense"  android:label="@string/AddLabelTag">
            <action android:name="android.media.action.STILL_IMAGE_CAMERA" />
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </activity>
        <activity android:name=".EditExpense" android:label="@string/EditLabelTag">
            <action android:name="android.media.action.STILL_IMAGE_CAMERA" />
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </activity>
        <activity android:name=".DeleteExpense" android:label="@string/DeleteLabelTag" />
        <activity android:name=".ShowExpenses" android:label="@string/ShowLabelTag"></activity>
    </application>

</manifest>